<%= render 'header' %>
<div class="container">
<div class="row">
  <div class="login col-xs-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <h1>Login</h1>

    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary submit-login" %>
    <% end %>
  </div>
</div>
</div>
